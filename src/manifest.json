{
	"manifest_version": 3,
	"name": "Better Code Block",
	"version": "1.1.0",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "img/icon-16.png",
			"32": "img/icon-32.png",
			"48": "img/icon-48.png",
			"128": "img/icon-128.png"
		}
	},
	"description": "A Chrome extension for better rendering of code blocks",
	"icons": {
		"16": "img/icon-16.png",
		"32": "img/icon-32.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/util.js", "js/content.js"]
		}
	],
	"permissions": ["activeTab", "scripting", "storage"]
}
